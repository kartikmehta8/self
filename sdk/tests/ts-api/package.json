{
  "name": "@selfxyz/ts-api-test",
  "version": "1.0.0",
  "description": "TypeScript API for testing SelfBackendVerifier",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch server.ts",
    "start": "node dist/server.js",
    "test": "./test-api.sh",
    "docker:build": "./docker-build.sh",
    "docker:run": "docker run -p 3000:3000 selfxyz-ts-api:latest",
    "docker:compose": "docker-compose up --build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "ethers": "^6.13.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22 <23"
  }
}
